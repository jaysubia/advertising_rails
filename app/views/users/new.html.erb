<div class="user-login-wrapper">
		<div id="info-wrapper">
			<h3 class="salutation">Add a new client</h3>
			<form class="form-group" action="" method="post">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

				<fieldset>
					<label for="">Email: <input name="email" type="text" class="form-control"></label>
					<label for="">First Name: <input name="first_name" type="text" class="form-control"></label>
					<label for="">Last Name: <input name="last_name" type="text" class="form-control"></label>
					<label for="">Password: <input name="password" type="password" class="form-control" placeholder="Password should be at least 8 characters"></label>
					<label for="">Confirm Password: <input name="confirm_pass" type="password" class="form-control"></label>
					<div class='clr'></div>
			  		<input type="submit" class="btn btn-default submit-button wide-button" value="Create">
			  		<div class='clr'></div>
				</fieldset>
			</form>
		</div>
	</div>