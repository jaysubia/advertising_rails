<!DOCTYPE html>
<html>
  <head>
    <title>Advertising</title>
    <%= csrf_meta_tags %>
  
    <%= stylesheet_link_tag 'application', 'demo', 'normalize', 'tabs', 'tabstyles', 'main', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'modernizr.custom.js', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= yield %>
  
    <%= javascript_include_tag 'cbpFWTabs.js', 'data-turbolinks-track': 'reload' %>

    <script>
    var pageHeight = $(window).height();
    $("#map").css("height", pageHeight-195);

      (function() {
        [].slice.call( document.querySelectorAll( '.tabs' ) ).forEach( function( el ) {
          new CBPFWTabs( el );
        });
      })();
    </script>
  </body>
</html>
