<div class="jumbotron">
	<div class="container">
		<div class="rep-header">
			<div class="rep-info">
				<p><strong>Rep Name:</strong> <%=@rep.first_name%> <%=@rep.last_name%></p>
				<p><strong>Email:</strong> <%=@rep.email%></p>
			</div>

			<div class="image_holder">
				<img src="<%=@rep.image%>" alt="<%=@rep.first_name%>_<%=@rep.image%>" height='150' width='150' id="image">
				<%= form_for @rep, html:{ multipart: true} do |f|%>
				
				<div class="field">
				  	<%= f.file_field :image, :class => ' choosefile'%> 
					<input type="hidden" value="<%=@rep.id%>" name="id">
					<%= f.submit :class => 'btn btn-default submit-button wide-button' %>
				</div>

				<%end%>
			</div>
			<div class="clr"></div>
		</div>
		<div class="mytable admins">
			<table cellspaceing="0" cellpadding="0" width="100%" border="0" align="center">
				<tr>
					<th>Client Name</th>
					<th>Contact Info</th>
					<th>Client Since</th>
					<th>Contract Expiration Date</th>
				</tr>

				<%if @rep.users%>
			  	<%@rep.users.each do |user|%>

				<tr><td colspan="4" height="10"></td></tr> 

				<tr style="border-top:1px solid rgba(41,178,123, 0.2);"><td colspan="4" height="11"></td></tr> <!-- Make sure this empty row is included -->

				<tr>
				  	<td width="245" valign="middle" class="td-division"><a href="#" data-toggle="modal" data-target=".modal"><%=user.first_name%> <%=user.last_name%></a></td>
				  	<td width="250" valign="middle" class="td-division"><a href="mailto:<%=user.email%>"> <%=user.email%></a></td>
				  	<td width="200" valign="middle" class="td-division"><%=user.created_at.strftime("%b. %d %Y")%> </td>
				  	<td valign="middle" class="td-division"><%=user.created_at.strftime("%b. %d %Y")%> </td>

			  	</tr>

				<tr style="border-bottom:1px solid rgba(41,178,123, 0.2);"><td colspan="4" height="11"></td></tr> 

			  <%end%>
			<%end%>
			</table>
		</div>
	</div>
</div>
