<div id="nav-container">
	<nav>
		<h1>Dashboard App</h1>
		<ul id="main-nav">
		<% if session[:user_id] != nil%>
			<li><a href="/users">Dashboard</a></li>
		<%elsif session[:rep_id] != nil%>
			<li><a href="/reps">Dashboard</a></li>
		<%elsif session[:admin_id] != nil%>
			<li><a href="/administrator/index">Dashboard</a></li>
		<%end%>
			<li><a href="/profile/">Profile</a></li>
		</ul>
		<ul id="session-nav">
			<li><a href="logout">Log off</a></li>
		</ul>
	</nav>
</div>
<div class="container">
	<h1>Hello <%=@rep.first_name%>!</h1>
	<div class="row">
		<p><strong>Name:</strong> <%=@rep.first_name%> <%=@rep.last_name%></p>
		<p><strong>Email:</strong> <%=@rep.email%></p>
	</div>
	<div class="row">
		<table class="table table-striped">
		<thead>
			<th>Name</th>
			<th>Email</th>
			<th>Client Since</th>
		</thead>	
		<%if @rep.users%>
		  <%@rep.users.each do |user|%>
		  <tr>
		  	<td><%=user.first_name%></td>
		  	<td><%=user.email%></td>
		  	<td><%=user.created_at%></td>
		  </tr>
		  <%end%>
		<%end%>
		</table>
	</div>
</div>
