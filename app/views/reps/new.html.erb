<div id="nav-container">
	<nav>
		<h1>Dashboard App</h1>
		<ul id="main-nav">
			<% if session[:user_id] != nil%>
				<li><a href="/users">Dashboard</a></li>
			<%elsif session[:rep_id] != nil%>
				<li><a href="/reps">Dashboard</a></li>
			<%elsif session[:admin_id] != nil%>
				<li><a href="/administrators/index">Dashboard</a></li>
			<%end%>
			<li><a href="/profile/">Profile</a></li>
		</ul>
		<ul id="session-nav">
			<li><a href="/logout">Log off</a></li>
		</ul>
	</nav>
</div>
<% if flash[:errors]%>
  <%flash[:errors].each do |error|%>
  <p><%=error%></p>
  <%end%>
<%end%>
<%if flash[:message]%>
  <p><%=flash[:message]%></p>
<%end%>
	<div class="user-login-wrapper">
		<div id="info-wrapper">
			<h3 class="salutation">Add a New Rep</h3>
			<form class="form-group" action="/reps/create" method="POST">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
				<input type="hidden" name="rep[administrator_id]" value="<%=session[:admin_id]%>">
				<fieldset>
					<label for="">Email: <input name="rep[email]" type="text" class="form-control"></label>
					<label for="">First Name: <input name="rep[first_name]" type="text" class="form-control"></label>
					<label for="">Last Name: <input name="rep[last_name]" type="text" class="form-control"></label>
					<label>Phone: <input type="text" name="rep[phone]" class="form-control"></label>
					<label for="">Password: <input name="rep[password]" type="password" class="form-control" placeholder="Password should be at least 8 characters"></label>
					<label for="">Confirm Password: <input name="rep[password_confirmation]" type="password" class="form-control" placeholder="Confirm Password"></label>
					<div class='clr'></div>
			  		<input type="submit" class="btn btn-default submit-button wide-button" value="Create">
			  		<div class='clr'></div>
				</fieldset>
			</form>
		</div>
	</div>