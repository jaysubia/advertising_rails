<div id="nav-container">
		<nav>
			<h1>Dashboard App</h1>
			<ul id="main-nav">
				<% if session[:user_id] != nil%>
					<li><a href="/users">Dashboard</a></li>
				<%elsif session[:rep_id] != nil%>
