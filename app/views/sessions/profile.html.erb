<div class="jumbotron">
	<div class="container">
		<h3 class="alt">Edit Your Profile</h3>
<%if flash[:errors]%>
  <%flash[:errors].each do |error|%>
	<p><%=error%></p>
  <%end%>
<%end%>
<% if flash[:message]%>
  <p><%=flash[:message]%></p>
<%end%>
		<!-- user -->
<%if @user != nil%>
		<div class="user-login-wrapper">
			<div id="info-wrapper">
				<form class="form-group" action="/users/<%=@user.id%>" method="POST">
					<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
					<input type="hidden" name="_method" value="PATCH">
					<fieldset>
						<legend>Edit Information</legend>
						<label for="">Email: <input name="user[email]" type="text" class="form-control" value="<%=@user.email%>"></label>
						<label for="">First Name: <input name="user[first_name]" type="text" class="form-control" value="<%=@user.first_name%>"></label>
						<label for="">Last Name: <input name="user[last_name]" type="text" class="form-control" value="<%=@user.last_name%>"></label>
				  		<input type="submit" class="btn btn-default submit-button wide-button" value="Update">
				  		<div class='clr'></div>
					</fieldset>
				</form>
			</div>
			<div id="pwd-wrapper">
				<form class="form-group" action="/users/<%=@user.id%>" method="POST">
					<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
					<input type="hidden" name="_method" value="PATCH">
					<fieldset>
						<legend>Change Password</legend>
						<label for="">Password: <input name="user[password]" type="password" class="form-control" placeholder="Password should be at least 8 characters"></label>
						<label for="">Confirm Password: <input name="user[password_confirmation]" type="password" placeholder="Confirm Password" class="form-control"></label>
						<div class='clr'></div>
				  		<input type="submit" class="btn btn-default submit-button wide-button" value="Update Password">
				  		<div class='clr'></div>
					</fieldset>
				</form>
			</div>
		</div>	
<%end%>
